  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "mongoose": "^8.18.3",
    "nodemon": "^3.1.10",
    "openid-client": "^5.7.1",
    "winston": "^3.18.3",
    "zod": "^4.1.11"
